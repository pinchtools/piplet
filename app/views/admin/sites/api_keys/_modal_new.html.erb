<!-- Modal -->
<div class="modal fade" id="newApiKeyModal" tabindex="-1" role="dialog" aria-labelledby="newApiKeyModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_for :api_key, remote:true do |f| %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <h4 class="modal-title"><%= t('admin.sites.api_keys.form.title') %></h4>
        </div>
        <div class="modal-body">
            <%= f.label :label %>
            <%= f.text_field :label, class: 'form-control' %>
        </div>
        <div class="modal-footer">
          <%= button_tag t('admin.sites.api_keys.form.close'), class: 'btn btn-default', 'type': 'button', 'data-dismiss': "modal" %>
          <%= f.button t('admin.sites.api_keys.form.submit'), class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>