<!-- Modal -->
<div class="modal fade" id="newTrustedDomainModal" tabindex="-1" role="dialog" aria-labelledby="newTrustedDomainModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_for :trusted_domain, remote:true do |f| %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <h4 class="modal-title"><%= t('admin.sites.trusted_domains.form.title') %></h4>
        </div>
        <div class="modal-body">
            <%= f.label :domain %>
            <%= f.text_field :domain, class: 'form-control' %>
            <div class="form-text text-muted"><%= t('admin.sites.trusted_domains.form.help_text') %></div>
        </div>
        <div class="modal-footer">
          <%= button_tag t('admin.sites.trusted_domains.form.close'), class: 'btn btn-default', 'type': 'button', 'data-dismiss': "modal" %>
          <%= f.button t('admin.sites.trusted_domains.form.submit'), class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
