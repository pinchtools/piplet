<!-- Modal -->
<div class="modal fade" id="blockModal" tabindex="-1" role="dialog" aria-labelledby="blockModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_for :user, url: block_admin_users_user_path, method: :post do |f| %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <h4 class="modal-title" id="blockModalLabel"><%= t('admin.users.users.block-modal.title') %></h4>
        </div>
        <div class="modal-body">
            <%= simple_format t("admin.users.users.block-modal.notice") %>
            
            <div class="row">
              <div class="col-md-12">
                <%= f.label :blocked_note %>
              </div>
            </div>
            
            <div class="row">
              <div class="col-md-12">
                <%= f.text_area :blocked_note, class: 'form-control' %>
              </div>
            </div>
        </div>
        <div class="modal-footer">
          <%= button_tag t('admin.users.users.block-modal.close'), class: 'btn btn-default', 'type': 'button', 'data-dismiss': "modal" %>
          <%= button_tag t('admin.users.users.block-modal.submit'), class: 'btn btn-primary' %>
        </div>
      <% end %>
      </div>
  </div>
</div>