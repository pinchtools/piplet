<tr>
  <td><%= gravatar_for user, size: 50 %></td>
  <td><%= link_to user.username, users_user_path(user) %></td>
  
  <td align="right">
    <% if !current_user?(user) %>
      <%= link_to t('global.destroy-btn'), [:users, user], method: :delete, data: { confirm: t('global.destroy-confirm') } %>
    <% end %>
  </td>
</tr>