<% provide(:title, t('password-reset.edit.reset-password')) %>
<h1><%= t('password-reset.edit.reset-password') %></h1>

<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_for(user, url: users_password_reset_path(params[:id])) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= hidden_field_tag :email, user.email %>
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
      <%= f.submit t('password-reset.edit.submit-btn'), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>