<% content_for :header do %>
  <%= javascript_include_tag 'users/user' %>
  <%= stylesheet_link_tag 'users/user' %>
<% end %>

<% options = (!user.new_record?) ? { :url => users_update_path } : {}%>

<% present(user) do |user| %>
  <%= form_for [:users, user], options do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <% if user.new_record? %>
      <div class="col-md-8">
        <br/>
        <hr/>
        <div class="row">
          <div class="col-md-12 text-center">
            <button type="button" class="btn btn-secondary"><i class="fa fa-facebook" aria-hidden="true"></i> Facebook</button>
            <button type="button" class="btn btn-secondary"><i class="fa fa-google" aria-hidden="true"></i> Google</button>
            <button type="button" class="btn btn-secondary"><i class="fa fa-twitter" aria-hidden="true"></i> Twitter</button>
          </div>
        </div>
        <hr/>
        <br/>
      </div>
    <% end %>

    <% if !user.new_record? %>
      <%= f.label :avatar %>
      <div class="row">
        <div class="col-md-2">
          <div id="avatar-thumbnail">
            <%= user.avatar_thumbnail_tag %>
          </div>
        </div>
        <div class="col-md-6">

          <%= f.fields_for :avatar do |a| %>
          <%= a.select :kind, UserAvatar.kinds.keys.map {|kind| [kind.titleize,kind]}, {}, { class: 'form-control' } %>

            <%= a.file_field :uri, class: 'form-control', style: (user.avatar.upload?) ? '' : 'display:none' %>

            <%= a.hidden_field :uri_cache %>
          <% end %>

        </div>
      </div>
    <% end %>

    <div class="row">
      <div class="col-md-8">
        <%= f.label :username %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-8">
        <%= f.text_field :username, class: 'form-control' %>
      </div>
      <div id="notice-username" class="col-md-4 col-notice"></div>
    </div>

    <div class="row">
      <div class="col-md-8">
        <%= f.label :email %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-8">
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      <div id="notice-email" class="col-md-4 col-notice"></div>
    </div>

    <% if !user.new_record? %>
      <div class="row">
        <div class="col-md-8">
          <%= f.label :description %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-8">
          <%= f.text_area :description, class: 'form-control' %>
          <p class="text-muted"><small><%= t 'user.form.help-text.description' %></small></p>
        </div>
        <div class="col-md-4 col-notice"></div>
      </div>


      <div class="row">
        <div class="col-md-8">
          <%= f.label :locale %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-8">
          <%= f.select :locale, I18n.available_locales.map {|l| [l.to_s.capitalize_first,l]}, {}, { class: 'form-control' } %>
        </div>
        <div class="col-md-4 col-notice"></div>
      </div>

    <% end %>

      <div class="row">
        <div class="col-md-8">
          <%= f.label :password %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-8">
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div id="notice-password" class="col-md-4 col-notice"></div>
      </div>


      <div class="row">
        <div class="col-md-8">
          <%= f.label :password_confirmation %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-8">
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
        <div class="col-md-4 col-notice"></div>
      </div>


    <%= f.hidden_field :time_zone %>


    <div class="row row-section">
      <div class="col-md-8">
        <%= f.submit yield(:button_text), class: "btn btn-primary" %>
      </div>
    </div>

    <% if !user.new_record? %>
      <div class="row row-section">
        <div class="col-md-8">
          <%= button_tag t('user.form.edit.destroy'),
            class: "btn btn-block btn-sm btn-danger-outline",
            type: "button",
            data: {toggle: "modal",target: "#removalModal"}
          %>
        </div>
      </div>
    <% end %>

  <% end %>

  <%= render 'modal_removal', user: user %>
<% end %>