<!-- Modal -->
<div class="modal fade" id="removalModal" tabindex="-1" role="dialog" aria-labelledby="removalModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_for :user, url: users_destroy_path, method: :delete do |f| %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <h4 class="modal-title" id="removalModalLabel"><%= t('user.removal.title') %></h4>
        </div>
        <div class="modal-body">
            <%= simple_format t("user.removal.notice") %>
        </div>
        <div class="modal-footer">
          <%= button_tag t('user.removal.close'), class: 'btn btn-default', 'type': 'button', 'data-dismiss': "modal" %>
          <%= button_tag t('user.removal.remove'), class: 'btn btn-danger' %>
        </div>
      <% end %>
      </div>
  </div>
</div>